set nocompatible
syntax enable
set number
set encoding=utf-8
"set hidden
set nowrap
set tabstop=2
set shiftwidth=2
set expandtab
set list
set listchars=tab:·\ ,trail:·,extends:»,precedes:«
set backspace=indent,eol,start
set whichwrap+=<,>,h,l,[,]
set hlsearch
set incsearch
set ignorecase
set smartcase
set scrolloff=5
set mat=3
filetype plugin indent on
set cursorline
call pathogen#infect()
colorscheme inkpot
set guifont=Menlo\ Regular:h10
set guioptions-=T
set clipboard=unnamed
